{
  "name": "scroll-n-react",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Andy Lui <awlui2014@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/enzyme-adapter-react-16": "^1.0.1",
    "@types/jest": "^21.1.8",
    "@types/react-dom": "^16.0.3",
    "better-react-spinkit": "^2.0.4"
  },
  "devDependencies": {
    "@types/sinon": "^4.1.2",
    "clean-webpack-plugin": "^0.1.17",
    "css-loader": "^0.28.7",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "html-webpack-plugin": "^2.30.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^21.2.1",
    "lodash": "^4.17.4",
    "node-sass": "^4.7.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "sass-loader": "^6.0.6",
    "sinon": "^4.1.3",
    "style-loader": "^0.19.1",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "types": "build/types",
  "lib": "build/types",
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.js --env development",
    "build": "webpack --config config/webpack.config.js --env production",
    "postbuild": "typedoc --out build/docs src --exclude '**/*.spec.tsx'",
    "test": "jest",
    "sass": "sass --watch src/styles/scss:src/public/styles"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "setupFiles": [
      "./jest/shim.js",
      "./jest/jestsetup.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test.tsconfig.json"
      }
    },
    "testRegex": "src/.*spec(\\.tsx?)$",
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!src/interfaces/**",
      "!build/**/*",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/jest/**",
      "!**/src/index.tsx"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  }
}
