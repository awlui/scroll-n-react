{
  "name": "scroll-n-react",
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "Andy Lui <awlui2014@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.0.29",
    "@types/react-dom": "^16.0.3"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.17",
    "enzyme": "^3.2.0",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.2.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typedoc": "^0.9.0",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7",
    "webpack-merge": "^4.1.1"
  },
  "scripts": {
    "start": "webpack-dev-server --config config/webpack.config.js --env development",
    "build": "webpack --config config/webpack.config.js --env production",
    "postbuild": "typedoc --out build/docs src --exclude '**/*.spec.ts'",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test.tsconfig.json"
      }
    },
    "testRegex": "(/src/.*(spec))(\\.tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "html"
    ]
  }
}
